/tracking/verbose 1
# 1D accelerator beam
#
/gps/particle proton
/gps/pos/type Beam
# beam direction
/gps/direction 0 0 1
# circular shape and 0 size
/gps/pos/shape Circle
/gps/pos/centre 0. 0. -1. m
/gps/pos/radius 0. mm
/gps/pos/sigma_r 0. mm
#
# the beam is monoenergetic
/gps/energy 150 MeV
#
/run/initialize
/run/beamOn 2
